<div class="row">
    <div class="column">
        <h1>Burgers!</h1>
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <li>{{this.burger_name}}
                <button type="change-devoured" data-id " = {{id}}">EAT IT!!</button>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="column">
        <h1>DEVOURED!!!</h1>
        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.burger_name}}
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>