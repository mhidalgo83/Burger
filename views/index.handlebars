<header>
    <h1>How Many Burgers Can You Eat?</h1>
</header>
<div class="row">
    <div class="column">
        <h1>Burgers!</h1>
        <ul>
            {{#each burgers}} {{#unless this.is_devoured}}
            <li>
                <p>{{this.burger_name}}</p>
                <span class="input-group-btn">
                    <form action="api/burgers/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="is_devoured" value="true">
                        <button class="btn btn-default btn-lg" type="submit"> EAT IT! </button>
                    </form>
                </span>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="column">
        <h1>DEVOURED!!!</h1>
        <ul>
            {{#each burgers}} {{#if this.is_devoured}}
            <li>
                {{this.burger_name}}
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>
<h2>Add A Burger</h2>
<form method="POST" action="/api/burgers">
    <textarea type="text" name="burger_name"></textarea>
    <button type="submit">Add Burger</button>
</form>